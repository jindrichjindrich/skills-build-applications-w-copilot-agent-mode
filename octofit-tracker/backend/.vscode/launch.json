{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Django Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "env": {
                "CODESPACE_NAME": "${env:CODESPACE_NAME}"
            },
            "envFile": "${workspaceFolder}/octofit-tracker/backend/.env",
            "console": "integratedTerminal"
        }
    ]
}
